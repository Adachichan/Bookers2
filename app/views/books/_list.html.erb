<div class = "col-md-3">
  <h2 class = "mt-3">User info</h2>
  <%= image_tag user.get_profile_image(100,100), class:"bd-placeholder-img align-self-center mx-3"; %>
  <table class = "table mt-1">
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>

  <div class = "row mt-3">
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class = "fas fa-user-cog"></i>
    <% end %>
  </div>

  <h2 class = "mt-3">New Book</h2>
  <%= form_with model: post_book do |f| %>
    <div>
      <label class = "mt-2">Title</label><br />
      <%= f.text_field :title %>
    </div>
    <div>
      <label class = "mt-2">Opinion</label><br />
      <%= f.text_area :body, :size=>"30" %>
    </div>
    <%= f.submit "Create Book", class: "btn btn-success mt-3" %>
  <% end %>
</div>
