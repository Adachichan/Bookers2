<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-3">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class = "mt-3">
          <label>Title</label><br />
          <%= f.text_field :title, :size=>"30" %>
        </div>
        <div class = "mt-3">
          <label>Opinion</label><br />
          <%= f.text_area :body, :size=>"45" %>
        </div>

        <%= f.submit "Update Book", class: "btn btn-success mt-3" %>

      <% end %>

      <div class = "mt-2">
        <%= link_to "Show", book_path(@book.id) %>
        <span> | </span>
        <%= link_to "Back", books_path %>
      </div>

    </div>
  </div>
</div>