<div class = "container px-5 px-sm-0">
  <div class = "row">

    <div class = "col-md-3">



      <h2 class = "mt-3">New Book</h2>
      <%= form_with model: @book do |f| %>
        <div>
          <label class = "mt-2">Title</label><br />
          <%= f.text_field :title %>
        </div>
        <div>
          <label class = "mt-2">Opinion</label><br />
          <%= f.text_area :opinion, :size=>"30" %>
        </div>
        <%= f.submit "Create Book", class: "btn btn-success mt-3" %>
      <% end %>
    </div>

    <div class = "col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
      <table class = "table table-hover table-striped mt-3">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>

              </td>
              <td>
                <%= link_to "#{book.title}", book_path(book.id), class:"text-dark" %>
              </td>
              <td>
                <%= book.opinion %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
    
  </div>
</div>