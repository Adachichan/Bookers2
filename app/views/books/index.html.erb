<div class = "container px-5 px-sm-0">

  <% if @post_book.errors.any? %>
    <div class = "my-4">
      <span class = "text-white bg-danger">
        &emsp;<%= @post_book.errors.count %>errors prohibited this obj from being saved:&emsp;
      </span>
      <ul>
        <% @post_book.errors.full_messages.each do |message| %>
          <li class = "text-danger"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "row">
    <%= render 'list', {user: @user, post_book: @post_book} %>

    <div class = "col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
      <table class = "table table-hover table-striped mt-3">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image(80,80), class:"bd-placeholder-img align-self-center mx-3"; %>
                <% end %>
              </td>
              <td>
                <%= link_to "#{book.title}", book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>