<% flash.each do |message_type, message| %>
  <div class = "mx-5 my-4">
    <span class="alert alert-<%= message_type %> text-white bg-success"><%= message %></span>
  </div>
<% end %>

<div class = "container px-5 px-sm-0">
  <div class = "row">

    <%= render 'list', {user: @user, post_book: @post_book} %>

    <div class = "col-md-8 offset-md-1 mt-3">
      <h2>Book detail</h2>
      <table class = "table table-hover table-striped mt-3">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image(80,80), class:"bd-placeholder-img align-self-center mx-3"; %>
                <div class = "mt-2">
                  <%= @book.user.name %>
                </div>
              <% end %>
            </td>
            <td>
              <%= link_to "#{@book.title}", book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
            </td>
            <td>
              <%=  link_to "Destroy", book_path(@book.id),  method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>