<div class = "container px-5 px-sm-0">
  <div class = "row">

    <div class = "col-md-3">
      <h2 class = "mt-3">User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class = "table mt-1">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

      <div class = "row mt-3">
        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class = "fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class = "mt-3">New Book</h2>
      <%= form_with model: @post_book do |f| %>
        <div>
          <label class = "mt-2">Title</label><br />
          <%= f.text_field :title %>
        </div>
        <div>
          <label class = "mt-2">Opinion</label><br />
          <%= f.text_area :opinion, :size=>"30" %>
        </div>
        <%= f.submit "Create Book", class: "btn btn-success mt-3" %>
      <% end %>
    </div>

    <div class = "col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
      <table class = "table table-hover table-striped mt-3">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%= image_tag 'no_image.jpg', :size => '80x80' %>
              </td>
              <td>
                <%= link_to "#{book.title}", book_path(book.id), class:"text-dark" %>
              </td>
              <td>
                <%= book.opinion %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>