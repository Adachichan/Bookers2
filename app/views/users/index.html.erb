<div class = "container px-5 px-sm-0">
  <div class = "row">

    <%= render 'books/list', {user: @user, post_book: @post_book} %>

    <div class = "col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
      <table class = "table table-hover table-striped mt-3">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(80,80), class:"bd-placeholder-img align-self-center mx-3";  %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show", user_path(user.id) %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>