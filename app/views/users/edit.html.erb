<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-3">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class = "mt-3">
          <label>Name</label><br />
          <%= f.text_field :name, :size=>"30" %>
        </div>
        <div class = "mt-3">
          <label>Image</label><br />
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class = "mt-3">
          <label>Introduction</label><br />
          <%= f.text_area :introduction, :size=>"45" %>
        </div>

        <%= f.submit "Update User", class: "btn btn-secondary mt-3" %>
      <% end %>
    </div>
  </div>
</div>