<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 mt-3 px-5 px-sm-0">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mt-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"50" %>
        </div>

        <%= f.submit "Send me reset password instructions", class: "btn btn-secondary mt-3" %>

      <% end %>

      <div class="mt-2">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>